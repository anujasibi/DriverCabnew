<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scroll"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#1AAEF4"
                android:text="Profile"
                android:textColor="#fff"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="22dp"
                android:id="@+id/text"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/re"
        android:layout_below="@+id/text"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Edit Profile"
            android:id="@+id/edit"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#000"
            android:background="@drawable/edit"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:id="@+id/img"
            android:src="@drawable/person"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/namer"
            android:hint="name"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_below="@+id/img"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/namek"
            android:text="121 reviews"
            android:textColor="#000"
            android:layout_marginStart="100dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/namer"
            />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:rating="4"
            android:layout_below="@+id/namer"
            android:layout_toEndOf="@+id/namek"/>


    </RelativeLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/cd"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/re">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iml"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/email"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iml"
            android:layout_marginTop="7dp"
            android:layout_marginStart="30dp"
            android:textColor="#000"
           android:hint="Email"
            android:id="@+id/ema"
            />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imll"
                android:layout_below="@+id/iml"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/phone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imll"
                android:layout_below="@+id/iml"
                android:layout_marginTop="15dp"
                android:id="@+id/ph"
                android:layout_marginStart="30dp"
                android:textColor="#000"
               android:hint="PhoneNumber"
                />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardElevation="20dp"
        android:id="@+id/cdv"
        android:layout_below="@+id/cd">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/rl"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/ne"
            android:src="@drawable/earning"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ne"
                    android:layout_marginStart="5dp"
                    android:text="Your Earnings"
                    android:textColor="#000" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/rlt"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:id="@+id/nee"
                    android:src="@drawable/re"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nee"
                    android:textColor="#000"
                    android:text="Your  Reviews"
                    />
            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@+id/cdv"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Notifications"
            android:textStyle="bold"
            android:id="@+id/not"
            android:textColor="#000"
            android:textAlignment="center"
            android:gravity="center_vertical"
           />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/not"
            android:id="@+id/rer"

            >

        </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>