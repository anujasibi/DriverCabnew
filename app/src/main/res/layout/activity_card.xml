<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".card">
    <TextView
        android:layout_width="match_parent"

        android:layout_height="60dp"
        android:background="#1AAEF4"
        android:text="Payment Method"
        android:textColor="#fff"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:id="@+id/text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Checkout"
        android:layout_below="@+id/text"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="22dp"
        android:id="@+id/texth"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card Number"
        android:layout_below="@+id/texth"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="#000"
        android:id="@+id/tex"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/edt"
        android:background="@drawable/edit"
        android:layout_below="@+id/tex"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expiry Date"
        android:layout_below="@+id/edt"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:textColor="#000"
        android:id="@+id/texu"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/edtn"
        android:background="@drawable/edit"
        android:layout_below="@+id/texu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVC"
        android:layout_below="@+id/edtn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:textColor="#000"
        android:id="@+id/texuu"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/edtnn"
        android:background="@drawable/edit"
        android:layout_below="@+id/texuu"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZIP code"
        android:layout_below="@+id/edtn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="115dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:textColor="#000"
        android:id="@+id/texz"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/edtz"
        android:background="@drawable/edit"
        android:layout_below="@+id/texuu"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/selc"
        android:text="Proceed"
        android:layout_below="@+id/edtz"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:id="@+id/textb"/>

</RelativeLayout>